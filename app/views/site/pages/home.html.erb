            <li>Lorem ipsum dolor sit amet</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</article>

<script>
(function() {

    var $outerContainer  = $('.slide-deck.outer'),
        $outerSections  = $outerContainer.find('.slide.outer'),
        $outerNav       = $('.nav-pills li')

    $outerSections.slideDeck({
        speed: 500,
        easing: $.support.transition ? 'ease' : 'swing'
    })

    $outerNav.find('a').on('click', function(event) {
        event.preventDefault()

        // toggle active states
        $outerNav.removeClass('active')
        $(this).parent().addClass('active')

        // transition
        var id = this.hash.replace(/#/, '')
        $outerSections.change(id)
        return false
    })

    $('.slide-deck.inner').each(function(index, container) {
        var $container = $(container),
            $sections  = $container.find('.slide.inner'),
            $left      = $container.find('.paddle.left'),
            $right     = $container.find('.paddle.right')

        $sections.slideDeck({
            speed: 500,
            easing: $.support.transition ? 'ease' : 'swing'
        })

        $left.on('click', function(){
            $sections.previous()
        })
        $right.on('click', function(){
            $sections.next()
        })
    })

    $(window).on("load",function() {
        setTimeout(function(){
            window.scrollTo(0, 1);
        }, 100);
    });

})();
</script>
