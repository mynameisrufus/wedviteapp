<div class="row">
  <div class="span6">
    <div class="page-header">
      <h1>WedVite</h1>
    </div>
  </div>
  <% introduction = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse a massa ligula, id tristique massa. Vivamus sollicitudin posuere ante et imperdiet. Duis molestie neque sagittis tellus egestas elementum." %>
  <div class="span6 call-to-action">
    <p class="hidden-phone"><%= introduction %></p>
    <ul>
      <li><%= link_to 'Sign up for free', new_user_registration_url(subdomain: 'plan'), class: 'cupid pink sign-up' %></li>
      <li><%= link_to 'Sign in', new_user_session_url(subdomain: 'plan'), class: 'cupid blue sign-in' %></li>
    </ul>
    <p class="visible-phone"><%= introduction %></p>
  </div>
</div>

<div class="row">
  <div class="span12">
    <ul class="nav nav-pills">
      <li class="active">
        <a href="#orginise">Organise</a>
      </li>
      <li><a href="#invitations">Invitations</a></li>
      <li><a href="#share">Share</a></li>
      <li><a href="#pricing">Pricing</a></li>
    </ul>
  </div>
</div>

<article class="slide-deck outer">
  <section class="slide outer" id="orginise" data-position="1" data-transition="horizontal">
    <div class="slide-deck inner">
      <div class="slide inner" id="guestlist" data-position="1" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
    </div>
  </section>
  <section class="slide outer" id="invitations" data-position="2" data-transition="horizontal">
    <div class="slide-deck inner">
      <div class="slide inner" id="guestlist" data-position="1" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
    </div>
  </section>
  <section class="slide outer" id="share" data-position="3" data-transition="horizontal">
    <div class="slide-deck inner">
      <div class="slide inner" id="guestlist" data-position="1" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
    </div>
  </section>
  <section class="slide outer" id="pricing" data-position="4" data-transition="horizontal">
    <div class="slide-deck inner">
      <div class="slide inner" id="guestlist" data-position="1" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
    </div>
  </section>
</article>

<script>
(function() {

    var $outerContainer  = $('.slide-deck.outer'),
        $innerContainers = $('.slide-deck.inner'),
        $outerSections  = $outerContainer.find('.slide.outer'),
        $outerNav       = $('.nav li')

    $outerSections.slideDeck({
        speed: 500,
        easing: $.support.transition ? 'ease' : 'swing'
    })

    var navListner = function($nav, $sections) {
        $nav.find('a').on('click', function(event) {
            event.preventDefault()

            // toggle active states
            $nav.removeClass('active')
            $(this).parent().addClass('active')

            // transition
            var id = this.hash.replace(/#/, '')
            $sections.change(id)
            return false
        })
    }

    navListner($outerNav, $outerSections);

    $(window).on("load",function() {
        setTimeout(function(){
            window.scrollTo(0, 1);
        }, 100);
    });

})();
</script>
