</div>

<div class="row">
  <div class="span12">
    <p><%= t :elevator_pitch %></p>
    <ul class="nav nav-pills">
      <li class="active">
        <a href="#orginise">Organise</a>
      </li>
      <li><a href="#invitations-and-stationery">Invitations</a></li>
      <li><a href="#share">Share</a></li>
      <li><a href="#pricing">Pricing</a></li>
    </ul>
  </div>
</div>

<article class="slide-deck outer">
  <section class="slide outer" id="orginise" data-position="1" data-transition="vertical">
    <div class="slide-deck inner">
      <div class="slide inner" id="guestlist" data-position="1" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
    </div>
  </section>
  <section class="slide outer" id="invitations-and-stationery" data-position="2" data-transition="vertical">
    <div class="slide-deck inner">
      <div class="paddle left"></div>
      <div class="paddle right"></div>
      <div class="slide inner" id="invitations" data-position="1" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
      <div class="slide inner" id="stationery" data-position="2" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
    </div>
  </section>
  <section class="slide outer" id="share" data-position="3" data-transition="vertical">
    <div class="slide-deck inner">
      <div class="paddle left"></div>
      <div class="paddle right"></div>
      <div class="slide inner" id="directions" data-position="1" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
      <div class="slide inner" id="messages" data-position="2" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
      <div class="slide inner" id="rsvps" data-position="3" data-transition="horizontal">
        <%= render partial: "guestlist" %>
      </div>
    </div>
  </section>
  <section class="slide outer" id="pricing" data-position="4" data-transition="vertical">
    <div class="row">
      <div class="span12">
        <div class="blurb">
          <h1>$49.95</h1>
