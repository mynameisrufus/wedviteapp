<div class="row">
  <div class="col-sm-12">
    <p><%= raw markdown.render @wedding.gift_registry.details.to_s %></p>
  </div>
</div>

<% @wedding.gift_registry.gifts.each_slice(2) do |slice| %>
  <div class="row">
    <% slice.each do |gift| %>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-block">
            <h4 class="card-title"><%= gift.description %></h4>
            <p>estimated price $<%= gift.price %></p>
            <% unless gift.url.nil? %>
              <p class="card-text"><%= link_to 'website', gift.url, target: 'blank' %></p>
            <% end %>
            <% if gift.unclaimed? %>
              <%= link_to 'Claim this gift.', claim_gift_path(@guest.token, gift), class: 'btn btn-primary' %>
            <% elsif gift.claimed_by @guest %>
              <%= link_to 'Un-claim this gift.', unclaim_gift_path(@guest.token, gift), class: 'btn btn-secondary' %>
            <% else %>
              This gift has been claimed.
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
