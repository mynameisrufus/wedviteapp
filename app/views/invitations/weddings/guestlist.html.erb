<div class="row">
  <div class="col-sm-12">
    <h1 id="guest-list" class="page-header">Guest List</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% @guests.each_with_index do |guest, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= guest.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
