<section class="collaborators new tab-content">
  <div class="page-header">
    <h1>Add collaborator</h1>
  </div>
  <div class="row">
    <div class="span3">
      <h3>Collaborators</h3>
      <p>You can add as many collaborators as you want. The default role is 'read' which only lets the collaborator view guest and wedding details.</p>
      <p><strong>Note:</strong> It is recomended that only the Bride and Groom have the invite role as this means you can send the invites!<p>
      <p>Maybe just the Bride should have the invite role ;)</p>
    </div>
    <div class="span9">
      <%= form_tag wedding_collaborators_path(@wedding) do %>
        <% if @invitor.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@invitor.errors.count, "error") %> prohibited this collaborator from being added:</h2>

            <ul>
            <% @invitor.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <fieldset>
          <div class="clearfix">
            <%= label_tag :email %>
            <div class="input">
              <%= email_field_tag :email, nil, class: 'xlarge', size: 30 %>
            </div>
          </div>
          <div class="clearfix">
            <%= label_tag :role %>
            <div class="input">
              <ul class="inputs-list">
                <% Collaborator::ROLES.each do |role| %>
                  <li>
                    <label>
                      <%= radio_button_tag :role, role, @invitor.role == role %>
                      <span><%= role %></span>
                    </label>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="actions">
            <%= submit_tag 'Add collaborator', class: 'btn primary' %>
            <%= link_to 'Back', wedding_collaborators_path(@wedding), class: 'btn' %>
          </div>
        </fieldset>
      <% end %>
    <div>
  <div>
</section>
