<%= invitations_form do |f| %>
  <fieldset>
    <%= f.text_area :wording, class: 'markdown', rows: 3 %>
    <div class="form-actions">
      <%= f.submit 'Save changes', class: 'btn primary' %><% unless @wedding.stationery.nil? %>&nbsp;<%= link_to 'Preview', wedding_invitation_preview_path(@wedding), target: '_blank', class: 'btn' %><% end %>
      <%= link_to "Need some help?", help_page_path(:invitation_and_stationery), class: 'modal-me btn' %>
    </div>
  </fieldset>
<% end %>
