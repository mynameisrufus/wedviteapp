<%= details_form do |f| %>
  <fieldset>
    <legend>Settings</legend>

    <div class="control-group">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: 'span4', size: 30 %>
        <p class="help-block">The name of your wedding that you will see in WedVite</p>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :has_reception, class: "control-label" %>
      <div class="controls">
        <label class="radio">
          <%= f.radio_button :has_reception, true %>
          <strong>Yes</strong> we are having a reception
        </label>
        <label class="radio">
          <%= f.radio_button :has_reception, false %>
          <strong>No</strong> we are not having a reception
        </label>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Save changes', class: 'btn primary' %>
    </div>
  </fieldset>
<% end %>
