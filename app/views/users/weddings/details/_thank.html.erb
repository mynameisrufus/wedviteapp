<%= details_form do |f| %>
  <fieldset>
    <%= f.text_area :thank_you_wording, class: 'markdown', rows: 3 %>

    <p class="help-block"><strong>Note:</strong> guests can only see this after the wedding date.</p>
    <div class="form-actions">
      <%= f.submit 'Save changes', class: 'btn primary' %>&nbsp;<%= link_to 'Preview', wedding_thank_preview_path(@wedding), target: '_blank', class: 'btn' %> <span></span>
    </div>
  </fieldset>
<% end %>
