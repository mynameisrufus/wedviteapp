  <%= form_for @wedding, html: { class: 'form-horizontal' } do |f| %>
    <%= error_messages_on(@wedding) %>
    <fieldset>
      <div class="control-group">
        <%= f.label :respond_deadline, class: "control-label" %>
        <div class="controls">
          <%= f.date_select :respond_deadline, {}, class: 'span2' %>
          <%= f.time_select :respond_deadline, { ignore_date: true }, { class: 'span1' } %>
