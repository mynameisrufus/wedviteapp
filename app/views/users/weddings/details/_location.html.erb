<%= form_for location, as: as, url: url, html: { class: "form-horizontal" } do |f| %>
  <fieldset>
    <%= f.hidden_field :address_components %>
    <%= f.hidden_field :types %>
    <%= f.hidden_field :google_id %>
    <%= f.hidden_field :google_url %>
    <%= f.hidden_field :lat %>
    <%= f.hidden_field :lng %>
    <%= f.hidden_field :vicinity %>
    <%= f.hidden_field :formatted_phone_number %>

    <div class="control-group">
      <%= f.label :name, "Place name", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: 'xlarge span6', size: 30 %>
        <p class="help-block">The name of your wedding that you will see in WedVite</p>
      </div>
    </div>   
 
    <div class="control-group">
      <%= f.label :website, "Web address", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :website, class: 'xlarge span6', size: 30 %>
        <p class="help-block">The venue or locations web address</p>
      </div>
    </div>   

    <div class="control-group">
      <%= f.label :formatted_address, "Address", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :formatted_address, class: 'xlarge span6', size: 30 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :international_phone_number, "Phone", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :international_phone_number, class: 'xlarge span6', size: 30 %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Save location', class: 'btn' %>
    </div>
  </fieldset>
<% end %>

<%= details_form do |f| %>
  <fieldset>
    <%= f.label how, "Extra instructions" %>
    <%= f.text_area how, class: 'markdown markdown-small', rows: 3 %>

    <div class="form-actions">
      <%= f.submit 'Save instructions', class: 'btn' %>&nbsp;<%= link_to 'Preview', wedding_directions_preview_path(@wedding), target: '_blank', class: 'btn' %>
    </div>
  </fieldset>
<% end %>
