<p class="help-block">Start typing to find the location</p>
<%= text_field_tag :search, nil, class: 'xlarge search span9', size: 30, type: :search %>

<div id="map" style="width: 100%; height: 400px"></div>

<hr/>

<%= form_for @location, url: url, html: { class: "form-horizontal" } do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this invitation from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <%= f.hidden_field :address_components %>
    <%= f.hidden_field :types %>
    <%= f.hidden_field :google_id %>
    <%= f.hidden_field :google_url %>
    <%= f.hidden_field :lat %>
    <%= f.hidden_field :lng %>
    <%= f.hidden_field :vicinity %>

    <div class="control-group">
      <%= f.label :name, "Place name", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: 'xlarge span6', size: 30 %>
        <p class="help-block">The name of your wedding that you will see in WedVite</p>
      </div>
    </div>   
 
    <div class="control-group">
      <%= f.label :website, "Web address", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :website, class: 'xlarge span6', size: 30 %>
        <p class="help-block">The venue or locations web address</p>
      </div>
    </div>   

    <div class="control-group">
      <%= f.label :formatted_address, "Address", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :formatted_address, class: 'xlarge span6', size: 30 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :formatted_phone_number, "Phone #", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :formatted_phone_number, class: 'xlarge span6', size: 30 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :international_phone_number, "International #", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :international_phone_number, class: 'xlarge span6', size: 30 %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Save location', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', wedding_path(@wedding), class: 'btn' %>
    </div>
  </fieldset>
<% end %>

<script>
  $(function(){
    locations();
  });
</script>
