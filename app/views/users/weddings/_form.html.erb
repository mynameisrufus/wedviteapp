<div class="row">
  <div class="span4">
    <h2>Wedding</h2>
    <p>Information about this action.</p>
  </div>
  <div class="span12">
    <%= form_for(@wedding) do |f| %>
      <% if @wedding.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@wedding.errors.count, "error") %> prohibited this invitation from being saved:</h2>

          <ul>
          <% @wedding.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <fieldset>
        <legend>Example form legend</legend>

        <div class="clearfix">
          <%= f.label :name %>
          <div class="input">
            <%= f.text_field :name, class: 'xlarge', size: 30 %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :title %>
          <div class="input">
            <%= f.text_area :title, class: 'xxlarge', rows: 3 %>
            <span class="help-block">
              Block of help text to describe the field above if need be.
            </span>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :wedding_when %>
          <div class="input">
            <div class="inline-inputs">
              <%= f.datetime_select :wedding_when, {}, class: 'small' %>
              <span class="help-block">All times are shown as Pacific Standard Time (GMT -08:00).</span>
            </div>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :wedding_where %>
          <div class="input">
            <%= f.text_field :wedding_where, class: 'xlarge', size: 30 %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :wedding_how %>
          <div class="input">
            <%= f.text_area :wedding_how, class: 'xxlarge', rows: 3 %>
            <span class="help-block">
              Block of help text to describe the field above if need be.
            </span>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :wedding_what %>
          <div class="input">
            <%= f.text_area :wedding_what, class: 'xxlarge', rows: 3 %>
            <span class="help-block">
              Block of help text to describe the field above if need be.
            </span>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :has_reception %>
          <div class="input">
            <ul class="inputs-list">
              <li>
                <label>
                  <%= f.check_box :has_reception %>
                  <span>Option one is this and that—be sure to include why it’s great</span>
                </label>
              </li>
            </ul>
            <span class="help-block">
              <strong>Note:</strong> Labels surround all the options for much larger click areas and a more usable form.
            </span>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :reception_when %>
          <div class="input">
            <div class="inline-inputs">
              <%= f.datetime_select :reception_when, {}, class: 'small' %>
              <span class="help-block">All times are shown as Pacific Standard Time (GMT -08:00).</span>
            </div>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :reception_where %>
          <div class="input">
            <%= f.text_field :reception_where, class: 'xlarge', size: 30 %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :reception_how %>
          <div class="input">
            <%= f.text_area :reception_how, class: 'xxlarge', rows: 3 %>
            <span class="help-block">
              Block of help text to describe the field above if need be.
            </span>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :reception_what %>
          <div class="input">
            <%= f.text_area :reception_what, class: 'xxlarge', rows: 3 %>
            <span class="help-block">
              Block of help text to describe the field above if need be.
            </span>
          </div>
        </div>

        <div class="actions">
          <% if @wedding.new_record? %>
            <%= f.submit 'Create wedding', class: 'btn primary' %>&nbsp;<%= link_to 'Cancel', root_path, class: 'btn' %>
          <% else %>
            <%= f.submit 'Update wedding', class: 'btn primary' %>&nbsp;<%= link_to 'Cancel', wedding_path(@wedding), class: 'btn' %>
          <% end %>
        </div>
      </fieldset>
    <% end %>
  <div>
<div>
