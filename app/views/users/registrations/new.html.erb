<section class="sessions new placeholder">
  <div class="content">
    <div class="page-header">
      <h1>Sign up</h1>
    </div>
    <div class="row">
      <div class="span7">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
          <%= devise_error_messages! %>
          <div class="control-group">
            <%= f.label :first_name, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :first_name, class: 'input-xlarge', size: 30 %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :last_name, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :last_name, class: 'input-xlarge', size: 30 %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :email, class: "control-label" %>
            <div class="controls">
              <%= f.email_field :email, class: 'input-xlarge', size: 30 %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password, class: "control-label" %>
            <div class="controls">
              <%= f.password_field :password, class: 'input-xlarge', size: 30 %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit "Sign up", class: 'btn btn-large' %>
          </div>
        <% end %>
      </div>
      <div class="span4">
        <p><%= link_to "Sign in", new_user_session_path %></p>
        <p><%= link_to "Forgot your password?", new_user_password_path %></p>
      </div>
    </div>
  </div>
</section>
