<section class="registrations placeholder">
  <div class="content">
    <div class="page-header">
      <h1>Profile</h1>
    </div>
    <div class="row">
      <div class="span6">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="clearfix">
            <%= f.label :first_name %>
            <div class="input">
              <%= f.text_field :first_name, class: 'xlarge', size: 30 %>
            </div>
          </div>
          <div class="clearfix">
            <%= f.label :last_name %>
            <div class="input">
              <%= f.text_field :last_name, class: 'xlarge', size: 30 %>
            </div>
          </div>
          <div class="clearfix">
            <%= f.label :email %>
            <div class="input">
              <%= f.email_field :email, class: 'xlarge', size: 30 %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Save", class: 'btn primary' %>
          </div>
        <% end %>
      </div>
      <div class="span4">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <div class="clearfix">
            <%= f.label :password, "New passowrd" %>
            <div class="input">
              <%= f.password_field :password, class: 'xlarge', size: 30 %>
            </div>
          </div>
          <div class="clearfix">
            <%= f.label :current_password %>
            <div class="input">
              <%= f.password_field :current_password, class: 'xlarge', size: 30 %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Save", class: 'btn primary' %>
          </div>
        <% end %>
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
        <%= link_to "Sign out", destroy_user_session_path, method: 'delete' %>
      </div>
    </div>
  </div>
</section>
