<section class="sessions placeholder">
  <div class="content">
    <div class="page-header">
      <h1>Sign in</h1>
    </div>
    <div class="row">
      <div class="span7">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
          <%= devise_error_messages! %>
          <div class="control-group">
            <%= f.label :email, class: "control-label" %>
            <div class="controls">
              <%= f.email_field :email, class: 'input-xlarge', size: 30 %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password, class: "control-label" %>
            <div class="controls">
              <%= f.password_field :password, class: 'input-xlarge', size: 30 %>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="control-group">
              <%= f.label :remember_me, class: "control-label" %>
              <div class="controls">
                <label class="checkbox">
                  <%= f.check_box :remember_me %>
                </label>
              </div>
            </div>
          <% end -%>
          <div class="form-actions">
            <%= f.submit "Sign in", class: 'btn btn-large' %>
          </div>
        <% end %>
      </div>
      <div class="span4">
        <p><%= link_to "Sign up", new_user_registration_path %></p>
        <p><%= link_to "Forgot your password?", new_user_password_path %></p>
      </div>
    </div>
  </div>
</section>
