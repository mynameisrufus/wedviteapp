<section class="sessions">
  <div class="content">
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-accounts" }) do |f| %>
      <h1>Log in to your account</h1>
      <%= devise_error_messages! %>
      <div class="input">
        <%= f.email_field :email, class: 'input-xlarge', size: 30, placeholder: 'Email' %>
      </div>
      <div class="input">
        <%= f.password_field :password, class: 'input-xlarge', size: 30, placeholder: 'Password' %>
      </div>
      <div class="form-actions">
        <%= f.submit "Sign in", class: 'btn btn-large' %>
      </div>
      <p><%= link_to "Forgot your password?", new_user_password_path %> Â· Need an account? <%= link_to "Sign up", new_user_registration_path %></p>
    <% end %>
  </div>
</section>
